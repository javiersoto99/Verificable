@model UAndes.ICC5103._202301.Models.Inscripcion


@{
    ViewBag.Title = "Búsqueda";
}

<h2>Búsqueda</h2>


<div class="container" style="margin-top:4rem;">
    <form>
        <div class="form-group">
            <label for="anoInput">Año</label>
            <input type="number" id="anoInput" />
        </div>
        
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label for="selectComuna">Comuna</label>
                    <select id="selectComuna">
                        <option selected disabled>Seleccione una Comuna</option>
                        @foreach (var comuna in ViewBag.Comunas)
                        {
                            <option value="@comuna.Id">@comuna.Nombre</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label for="manzanaInput">Manzana</label>
                    <input type="number" id="manzanaInput" />
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label for="predioInput">Predio</label>
                    <input type="number" id="predioInput" />
                </div>
            </div>
            <div>
                <button type="submit" class="btn btn-default" style="margin-top:2.6rem;">Buscar</button>
            </div>
        </div>
    </form>
</div>

<div style="margin-top:3rem;">
    <h3>Resultados:</h3>
    <table class="table">
        <thead>
            <th>Rol</th>
            <th>Rut</th>
            <th>% Derechos</th>
            <th>Año Inscripción</th>
            <th>Número Inscripción</th>
            <th>
                Fecha Inscripción
            </th>
            <th>
                Año Vigencia Inicial
            </th>
            <th>
                Año Vigencia Final
            </th>
        </thead>
    </table>
</div>

